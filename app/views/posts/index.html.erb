<h1 id="page_title">Stuff I've Written</h1>

<div id="posts_wrapper" class="skinny_wrapper">
	<% @posts.each do |post| %>
			<div class="post">
				<%= link_to post do %>
					<%= image_tag post.image.url(:medium) %>
					<h2><%= post.title %></h2>
				<% end %>

				<p class="date"><%= post.created_at.strftime('%A, %B %d') %></p>
				<hr>
			</div>	
	<% end %>
</div>

<%= will_paginate @posts %>
