<h1 id="page_title">Say Hello!</h1>

<div class="contact1">
	<div class="container-contact1">
		<div class="contact1-pic js-tilt" data-tilt>
			<%= image_tag("img-01.png", :alt => "envelope") %>
		</div>

		<%= form_for @contact, :html => {class: 'contact1-form'} do |f| %>
			<div class="wrap-input1 validate-input" data-validate = "Name is required">
				<%= f.text_field :name, required: true, class: 'input1', type: 'text', placeholder: 'Name'  %>
				<span class="shadow-input1"></span>
			</div>

			<br>

			<div class="wrap-input1 validate-input" data-validate = "Name is required">
				<%= f.email_field :email, required: true, class: 'input1', type: 'text', placeholder: 'Email'  %>
				<span class="shadow-input1"></span>
			</div>

			<br>

			<div class="wrap-input1 validate-input" data-validate = "Name is required">
				<%= f.text_area :message, as: :text, class: 'input1', type: 'text', placeholder: 'Message'  %>
				<span class="shadow-input1"></span>
			</div>

			<div class="hidden">
				<%= f.text_field :nickname, hint: 'leave this field blank' %>
			</div>

			<div class="container-contact1-form-btn">
				<%= button_tag( :class => "contact1-form-btn") do %>
					<span>
						SEND MESSAGE
						<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
					</span>
				<% end %>
			</div>
		<% end %>
	</div>
</div>